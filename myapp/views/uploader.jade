extends uploader_layout

block content
  h1= uploader
  p Welcome to #{uploader}
  div
    form(action='/uploader/pdfupload',method='post')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='email') Enter Email
            input(id='email',type='email',value='',placeholder='@',name='email')
      div(data-role='fieldcontain')
        fieldset(data-role='controlgroup')
          label(for='email2') Re-enter Email
            input(id='email2',type='email',value='',placeholder='@',name='email2')
      div(data-role='fieldcontain')
        input(type='submit',value='Upload',data-transition='fade', data-theme='c')
